<%= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= f.input :deadline %>
  <%= f.input :done %>
  <%= f.association :project %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn' %>
  </div>
<% end %>
